<UserControl x:Class="DatabaseProject.Homework_Detail_Grid_Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Name="Homework_Title_TextBlock" Text="作业标题" Grid.Row="0" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Left" FontWeight="Bold"/>
        <TextBlock Name="Homework_Content_TextBlock" Text="作业内容" Grid.Row="1" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <TextBlock Name="Homework_Time_TextBlock" Text="作业布置时间" Grid.Row="2" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Left"/>
    </Grid>
</UserControl>
